[global/wm]
margin-top = 0
margin-bottom = 0


;; File Inclusion
include-file = ~/.config/leftwm/themes/current/polybar.colors
include-file = ~/.config/leftwm/themes/current/polybar.modules


[settings]
screenchange-reload = true
throttle-output = 5
throttle-output-for = 10
compositing-background = source
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over
pseudo-transparency = false

[bar/mainbar0]
inherit = bar/barbase

modules-left = launcher workspace0 title
modules-center = date
modules-right = aur-updates arch-updates battery temperature spacer cpu mem spacer pulseaudio-control bluetooth keyboard powermenu spacer

tray-position = right
tray-detached = false
tray-maxsize = 20
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 4
tray-scale = 1


[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t "$SCRIPTPATH/polybar.liquid"
tail = true

[bar/mainbar1]
inherit = bar/barbase

modules-right = workspace1

[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t "$SCRIPTPATH/polybar.liquid"
tail = true


[bar/barbase]
width = ${env:width}
monitor = ${env:monitor}
offset-x = 8
offset-y = 4
height = 28
fixed-center = true
bottom = false
background = ${color.background}
foreground = ${color.foreground}
radius-top = 0
radius-bottom = 0
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 0
font-0 = "CaskaydiaCove Nerd Font:size=13;2"
font-1 = "MesloLGS Nerd Font:fontformat=truetype:size=11:weight=bold;2"
border-top = 1
border-bottom = 1
border-right = 1
border-left = 1
border-color = ${color.primary}
cursor-click = pointer
cursor-scroll = ns-resize
line-size = 2
line-color = ${color.primary}
